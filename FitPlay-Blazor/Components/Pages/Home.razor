@page "/"
@attribute [AllowAnonymous]
@layout EmptyLayout

<!-- PAGE-SCOPED LAYOUT OVERRIDES -->
<style>
    /* === FONTS === */
    @@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

    /* === ROOT VARIABLES === */
    :root {
        --bg-dark: #0b0b11;
        --bg-card: rgba(255,255,255,0.04);
        --accent-magenta: #ff2fb4;
        --accent-teal: #0ef0ff;
        --text-primary: #f8f9fb;
        --text-muted: #9aa0b5;
        --glass-border: rgba(255,255,255,0.08);
        --glass-bg: rgba(255,255,255,0.06);
    }

    /* === GLOBAL OVERRIDES FOR THIS PAGE === */
    body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        font-family: 'Space Grotesk', sans-serif;
        overflow-x: hidden;
    }
</style>

<!-- TOP NAV BAR -->
<header class="top-nav">
    <div class="nav-inner">
        <a href="/" class="logo">FIT<span>PLAY</span></a>
        <nav class="nav-links-top">
            <a href="#hero">Home</a>
            <a href="#classes">Classes</a>
            <a href="#trainers">Trainers</a>
            <a href="#perks">Membership</a>
            <a href="#contact">Contact</a>
        </nav>
        <a href="Account/Register" class="btn-primary">Join Now</a>
    </div>
</header>

<!-- HERO SECTION -->
<section class="hero" id="hero">
    <div class="hero-bg">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>
    <div class="hero-content">
        <div class="badges">
            <span class="badge">Open Late</span>
            <span class="badge badge-alt">Live DJ</span>
        </div>
        <h1>Train Like It's<br /><span class="highlight">Friday Night</span></h1>
        <p class="hero-sub">Where fitness meets nightlife. Push your limits with beats that move you.</p>
        <div class="hero-ctas">
            <a href="trainings" class="btn-primary">Book a Class</a>
            <a href="#classes" class="btn-secondary">View Schedule</a>
        </div>
    </div>
</section>

<!-- STATS STRIP -->
<section class="stats-strip">
    <div class="stat-card">
        <span class="stat-value">2,500+</span>
        <span class="stat-label">Active Members</span>
    </div>
    <div class="stat-card">
        <span class="stat-value">45</span>
        <span class="stat-label">Classes / Week</span>
    </div>
    <div class="stat-card">
        <span class="stat-value">18</span>
        <span class="stat-label">Expert Trainers</span>
    </div>
    <div class="stat-card">
        <span class="stat-value">650</span>
        <span class="stat-label">Avg. Calories / Session</span>
    </div>
</section>

