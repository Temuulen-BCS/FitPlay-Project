        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 20px;
    }

    .class-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 18px;
        padding: 18px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.24);
        transition: transform 0.25s ease, border-color 0.25s ease, box-shadow 0.25s ease;
    }

    .class-card:hover {
        transform: translateY(-4px);
        border-color: rgba(255,255,255,0.2);
        box-shadow: 0 14px 36px rgba(0,0,0,0.3);
    }

    .class-card.booked {
        border-color: rgba(14,240,255,0.5);
        box-shadow: 0 12px 30px rgba(14,240,255,0.12);
    }

    .class-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 14px;
    }

    .class-time {
        font-weight: 700;
        font-size: 16px;
        color: var(--accent-teal);
    }

    .intensity {
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 0.3px;
        text-transform: uppercase;
    }

    .intensity.high {
        background: rgba(255,47,180,0.2);
        color: var(--accent-magenta);
        border: 1px solid rgba(255,47,180,0.4);
    }

    .intensity.medium {
        background: rgba(255,215,0,0.2);
        color: var(--accent-gold);
        border: 1px solid rgba(255,215,0,0.4);
    }

    .intensity.low {
        background: rgba(14,240,255,0.15);
        color: var(--accent-teal);
        border: 1px solid rgba(14,240,255,0.35);
    }

    .class-name {
        margin: 0 0 6px 0;
        font-size: 18px;
        color: var(--text-primary);
    }

    .class-meta {
        margin: 0 0 14px 0;
        font-size: 13px;
        color: var(--text-muted);
    }

    .slots {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 12px;
        color: var(--text-muted);
        margin-bottom: 14px;
    }

    .btn-book {
        width: 100%;
        padding: 12px 14px;
        background: linear-gradient(135deg, var(--accent-teal), var(--accent-magenta));
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 6px 20px rgba(255,47,180,0.25);
    }

    .btn-book:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 10px 28px rgba(255,47,180,0.35);
    }

    .btn-book:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        box-shadow: none;
    }

    .btn-cancel {
        width: 100%;
        padding: 10px 14px;
        background: rgba(255,255,255,0.06);
        color: var(--text-primary);
        border: 1px solid rgba(255,47,180,0.45);
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
        margin-top: 12px;
    }

    .btn-cancel:hover {
        transform: translateY(-2px);
        border-color: var(--accent-magenta);
        box-shadow: 0 8px 22px rgba(255,47,180,0.2);
    }

    .loading, .no-classes {
