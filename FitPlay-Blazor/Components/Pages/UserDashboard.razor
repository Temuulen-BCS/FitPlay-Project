@page "/dashboard"
@attribute [Authorize]
@layout EmptyLayout

@using Microsoft.AspNetCore.Authorization
@using FitPlay_Blazor.Components.Layout

<PageTitle>Dashboard - FitPlay</PageTitle>

<!-- PAGE STYLES -->
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

    :root {
        --bg-dark: #0b0b11;
        --bg-card: rgba(255,255,255,0.04);
        --accent-magenta: #ff2fb4;
        --accent-teal: #0ef0ff;
        --accent-gold: #ffd700;
        --text-primary: #f8f9fb;
        --text-muted: #9aa0b5;
        --glass-border: rgba(255,255,255,0.08);
        --glass-bg: rgba(255,255,255,0.06);
    }

    body {
        margin: 0;
        background: var(--bg-dark);
        color: var(--text-primary);
        font-family: 'Space Grotesk', sans-serif;
        overflow-x: hidden;
    }
</style>

<!-- TOP NAV BAR -->
<header class="top-nav">
    <div class="nav-inner">
        <a href="/" class="logo">FIT<span>PLAY</span></a>
        <nav class="nav-links-top">
            <a href="/dashboard" class="active">Dashboard</a>
            <a href="/trainings">Classes</a>
            <a href="/#trainers">Trainers</a>
            <a href="/#perks">Membership</a>
        </nav>
        <div class="nav-user">
            <span class="user-level">Lv. 12</span>
            <div class="user-avatar">U</div>
        </div>
    </div>
</header>

<!-- DASHBOARD CONTENT -->
<main class="dashboard-main">
    <div class="dashboard-bg">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>

    <div class="dashboard-container">
        <!-- WELCOME HEADER -->
        <section class="welcome-section">
            <div class="welcome-content">
                <h1>Welcome back, <span class="highlight">Champion</span></h1>
                <p class="welcome-sub">Ready to crush your goals today? You're on a 7-day streak!</p>
            </div>
            <div class="streak-badge">
                <span class="streak-flame">7</span>
                <span class="streak-label">Day Streak</span>
            </div>
        </section>

        <!-- STATS CARDS -->
        <section class="stats-section">
            <div class="stat-card glow-magenta">
                <div class="stat-icon">XP</div>
                <div class="stat-info">
                    <span class="stat-value">2,450</span>
                    <span class="stat-label">Total XP</span>
                </div>
                <div class="stat-progress">
                    <div class="progress-bar" style="width: 65%;"></div>
                </div>
                <span class="stat-next">550 XP to Level 13</span>
            </div>

            <div class="stat-card glow-teal">
                <div class="stat-icon">CAL</div>
                <div class="stat-info">
                    <span class="stat-value">12,840</span>
                    <span class="stat-label">Calories Burned</span>
                </div>
                <span class="stat-detail">This month</span>
            </div>

            <div class="stat-card glow-gold">
                <div class="stat-icon">WO</div>
                <div class="stat-info">
                    <span class="stat-value">24</span>
                    <span class="stat-label">Workouts</span>
                </div>
                <span class="stat-detail">Completed</span>
            </div>

            <div class="stat-card glow-magenta">
                <div class="stat-icon">HR</div>
                <div class="stat-info">
                    <span class="stat-value">18.5</span>
                    <span class="stat-label">Hours Trained</span>
                </div>
                <span class="stat-detail">Total time</span>
            </div>
        </section>

        <!-- MAIN GRID -->
        <div class="dashboard-grid">
            <!-- LEFT COLUMN -->
            <div class="grid-left">
                <!-- TODAY'S SCHEDULE -->
                <section class="card schedule-card">
                    <div class="card-header">
                        <h2>Today's Schedule</h2>
                        <a href="/trainings" class="link-btn">View All</a>
                    </div>
                    <div class="schedule-list">
                        <div class="schedule-item active">
                            <div class="schedule-time">19:00</div>
                            <div class="schedule-info">
                                <h3>HIIT Inferno</h3>
                                <p>Coach Marcus | 45 min</p>
                            </div>
                            <span class="schedule-status booked">Booked</span>
                        </div>
                        <div class="schedule-item">
                            <div class="schedule-time">20:30</div>
                            <div class="schedule-info">
                                <h3>Box & Flow</h3>
                                <p>Coach Leila | 60 min</p>
                            </div>
                            <button class="btn-book">Book</button>
                        </div>
                        <div class="schedule-item">
                            <div class="schedule-time">21:45</div>
                            <div class="schedule-info">
                                <h3>Night Yoga</h3>
                                <p>Coach Sana | 50 min</p>
                            </div>
                            <button class="btn-book">Book</button>
                        </div>
                    </div>
                </section>

                <!-- WEEKLY PROGRESS -->
                <section class="card progress-card">
                    <div class="card-header">
                        <h2>Weekly Progress</h2>
                        <span class="badge-teal">+15% vs last week</span>
                    </div>
                    <div class="progress-chart">
                        <div class="chart-bars">
                            <div class="chart-bar">
                                <div class="bar-fill" style="height: 60%;"></div>
                                <span class="bar-label">Mon</span>
                            </div>
                            <div class="chart-bar">
                                <div class="bar-fill" style="height: 80%;"></div>
                                <span class="bar-label">Tue</span>
                            </div>
                            <div class="chart-bar">
                                <div class="bar-fill" style="height: 45%;"></div>
                                <span class="bar-label">Wed</span>
                            </div>
                            <div class="chart-bar">
                                <div class="bar-fill" style="height: 90%;"></div>
                                <span class="bar-label">Thu</span>
                            </div>
                            <div class="chart-bar active">
                                <div class="bar-fill" style="height: 70%;"></div>
                                <span class="bar-label">Fri</span>
                            </div>
                            <div class="chart-bar">
                                <div class="bar-fill empty" style="height: 20%;"></div>
                                <span class="bar-label">Sat</span>
                            </div>
                            <div class="chart-bar">
                                <div class="bar-fill empty" style="height: 20%;"></div>
                                <span class="bar-label">Sun</span>
                            </div>
                        </div>
                    </div>
                    <div class="progress-stats">
                        <div class="progress-stat">
                            <span class="ps-value">5</span>
                            <span class="ps-label">Workouts</span>
                        </div>
                        <div class="progress-stat">
                            <span class="ps-value">3,200</span>
                            <span class="ps-label">Calories</span>
                        </div>
                        <div class="progress-stat">
                            <span class="ps-value">4.5h</span>
                            <span class="ps-label">Time</span>
                        </div>
                    </div>
                </section>
            </div>

            <!-- RIGHT COLUMN -->
            <div class="grid-right">
                <!-- ACHIEVEMENTS -->
                <section class="card achievements-card">
                    <div class="card-header">
                        <h2>Achievements</h2>
                        <span class="achievement-count">8/24</span>
                    </div>
                    <div class="achievements-grid">
                        <div class="achievement unlocked">
                            <div class="achievement-icon">1W</div>
                            <span class="achievement-name">First Week</span>
                        </div>
                        <div class="achievement unlocked">
                            <div class="achievement-icon">10</div>
                            <span class="achievement-name">10 Workouts</span>
                        </div>
                        <div class="achievement unlocked">
                            <div class="achievement-icon">5K</div>
                            <span class="achievement-name">5K Calories</span>
                        </div>
                        <div class="achievement unlocked">
                            <div class="achievement-icon">7D</div>
                            <span class="achievement-name">7 Day Streak</span>
                        </div>
                        <div class="achievement locked">
                            <div class="achievement-icon">30</div>
                            <span class="achievement-name">30 Workouts</span>
                        </div>
                        <div class="achievement locked">
                            <div class="achievement-icon">14D</div>
                            <span class="achievement-name">14 Day Streak</span>
                        </div>
                    </div>
                </section>

                <!-- RECOMMENDED -->
                <section class="card recommended-card">
                    <div class="card-header">
                        <h2>Recommended For You</h2>
                    </div>
                    <div class="recommended-list">
                        <div class="recommended-item">
                            <div class="rec-icon">HIIT</div>
                            <div class="rec-info">
                                <h3>Morning Burn</h3>
                                <p>High intensity | 30 min</p>
                            </div>
                            <span class="rec-xp">+150 XP</span>
                        </div>
                        <div class="recommended-item">
                            <div class="rec-icon">STR</div>
                            <div class="rec-info">
                                <h3>Upper Body Power</h3>
                                <p>Strength | 45 min</p>
                            </div>
                            <span class="rec-xp">+200 XP</span>
                        </div>
                        <div class="recommended-item">
                            <div class="rec-icon">YG</div>
                            <div class="rec-info">
                                <h3>Recovery Flow</h3>
                                <p>Yoga | 40 min</p>
                            </div>
                            <span class="rec-xp">+100 XP</span>
                        </div>
                    </div>
                </section>

                <!-- QUICK ACTIONS -->
                <section class="card actions-card">
                    <h2>Quick Actions</h2>
                    <div class="actions-grid">
                        <a href="/trainings" class="action-btn">
                            <span class="action-icon">+</span>
                            <span>Book Class</span>
                        </a>
                        <a href="#" class="action-btn">
                            <span class="action-icon">LOG</span>
                            <span>Log Workout</span>
                        </a>
                        <a href="#" class="action-btn">
                            <span class="action-icon">GYM</span>
                            <span>Check In</span>
                        </a>
                        <a href="#" class="action-btn">
                            <span class="action-icon">INV</span>
                            <span>Invite Friend</span>
                        </a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</main>

<!-- FOOTER -->
<footer class="site-footer">
    <p>&copy; 2026 FitPlay. Where Fitness Meets Nightlife. All rights reserved.</p>
</footer>

<style>
    /* === TOP NAV === */
    .top-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: rgba(11, 11, 17, 0.85);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--glass-border);
    }
    .nav-inner {
        max-width: 1400px;
        margin: 0 auto;
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .logo {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--text-primary);
        text-decoration: none;
        letter-spacing: 2px;
    }
    .logo span {
        color: var(--accent-magenta);
    }
    .nav-links-top {
        display: flex;
        gap: 2rem;
    }
    .nav-links-top a {
        color: var(--text-muted);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }
    .nav-links-top a:hover,
    .nav-links-top a.active {
        color: var(--accent-teal);
    }
    .nav-user {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    .user-level {
        background: linear-gradient(135deg, var(--accent-magenta), var(--accent-teal));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
        font-size: 0.9rem;
    }
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent-magenta), var(--accent-teal));
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: #fff;
        cursor: pointer;
    }

    /* === DASHBOARD MAIN === */
    .dashboard-main {
        position: relative;
        min-height: 100vh;
        padding: 6rem 2rem 4rem;
    }
    .dashboard-bg {
        position: fixed;
        inset: 0;
        z-index: 0;
        background: radial-gradient(ellipse at 20% 10%, rgba(255,47,180,0.1) 0%, transparent 40%),
                    radial-gradient(ellipse at 80% 90%, rgba(14,240,255,0.08) 0%, transparent 40%),
                    var(--bg-dark);
        pointer-events: none;
    }
    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.4;
        animation: float 10s ease-in-out infinite;
    }
    .orb-1 {
        width: 300px;
        height: 300px;
        background: var(--accent-magenta);
        top: 5%;
        left: 5%;
    }
    .orb-2 {
        width: 250px;
        height: 250px;
        background: var(--accent-teal);
        bottom: 10%;
        right: 5%;
        animation-delay: 3s;
    }
    @@keyframes float {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-20px) scale(1.03); }
    }
    .dashboard-container {
        position: relative;
        z-index: 1;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* === WELCOME SECTION === */
    .welcome-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .welcome-content h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 0.5rem;
    }
    .highlight {
        color: var(--accent-magenta);
        text-shadow: 0 0 30px rgba(255,47,180,0.4);
    }
    .welcome-sub {
        color: var(--text-muted);
        margin: 0;
        font-size: 1.1rem;
    }
    .streak-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: linear-gradient(135deg, rgba(255,215,0,0.2), rgba(255,47,180,0.2));
        border: 1px solid rgba(255,215,0,0.3);
        border-radius: 16px;
        padding: 1rem 1.5rem;
    }
    .streak-flame {
        font-size: 2rem;
        font-weight: 700;
        color: var(--accent-gold);
        text-shadow: 0 0 20px rgba(255,215,0,0.5);
    }
    .streak-label {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    /* === STATS SECTION === */
    .stats-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    .stat-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
        transition: transform 0.2s, border-color 0.3s;
    }
    .stat-card:hover {
        transform: translateY(-4px);
    }
    .stat-card.glow-magenta:hover {
        border-color: var(--accent-magenta);
        box-shadow: 0 0 30px rgba(255,47,180,0.2);
    }
    .stat-card.glow-teal:hover {
        border-color: var(--accent-teal);
        box-shadow: 0 0 30px rgba(14,240,255,0.2);
    }
    .stat-card.glow-gold:hover {
        border-color: var(--accent-gold);
        box-shadow: 0 0 30px rgba(255,215,0,0.2);
    }
    .stat-icon {
        width: 45px;
        height: 45px;
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--accent-teal);
        margin-bottom: 1rem;
    }
    .glow-magenta .stat-icon { color: var(--accent-magenta); }
    .glow-gold .stat-icon { color: var(--accent-gold); }
    .stat-info {
        display: flex;
        flex-direction: column;
    }
    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
    }
    .stat-label {
        font-size: 0.9rem;
        color: var(--text-muted);
    }
    .stat-detail {
        font-size: 0.8rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
    }
    .stat-progress {
        margin-top: 1rem;
        height: 6px;
        background: rgba(255,255,255,0.1);
        border-radius: 3px;
        overflow: hidden;
    }
    .progress-bar {
        height: 100%;
        background: linear-gradient(90deg, var(--accent-magenta), var(--accent-teal));
        border-radius: 3px;
    }
    .stat-next {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
        display: block;
    }

    /* === DASHBOARD GRID === */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 1.5rem;
    }
    .grid-left, .grid-right {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    /* === CARDS === */
    .card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 1.5rem;
    }
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.25rem;
    }
    .card-header h2 {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
    }
    .link-btn {
        color: var(--accent-teal);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
    }
    .link-btn:hover {
        text-decoration: underline;
    }
    .badge-teal {
        background: rgba(14,240,255,0.15);
        color: var(--accent-teal);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* === SCHEDULE === */
    .schedule-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .schedule-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255,255,255,0.03);
        border: 1px solid var(--glass-border);
        border-radius: 14px;
        transition: border-color 0.3s;
    }
    .schedule-item:hover {
        border-color: var(--accent-teal);
    }
    .schedule-item.active {
        border-color: var(--accent-magenta);
        background: rgba(255,47,180,0.05);
    }
    .schedule-time {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--accent-teal);
        min-width: 60px;
    }
    .schedule-item.active .schedule-time {
        color: var(--accent-magenta);
    }
    .schedule-info {
        flex: 1;
    }
    .schedule-info h3 {
        margin: 0 0 0.25rem;
        font-size: 1rem;
        font-weight: 600;
    }
    .schedule-info p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--text-muted);
    }
    .schedule-status {
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
    }
    .schedule-status.booked {
        background: rgba(255,47,180,0.2);
        color: var(--accent-magenta);
    }
    .btn-book {
        background: transparent;
        border: 1px solid var(--accent-teal);
        color: var(--accent-teal);
        padding: 0.35rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s, color 0.3s;
    }
    .btn-book:hover {
        background: var(--accent-teal);
        color: var(--bg-dark);
    }

    /* === PROGRESS CHART === */
    .progress-chart {
        margin-bottom: 1.5rem;
    }
    .chart-bars {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        height: 120px;
        gap: 0.5rem;
    }
    .chart-bar {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
    }
    .bar-fill {
        width: 100%;
        max-width: 40px;
        background: linear-gradient(180deg, var(--accent-teal), var(--accent-magenta));
        border-radius: 6px 6px 0 0;
        margin-top: auto;
        transition: height 0.3s;
    }
    .bar-fill.empty {
        background: rgba(255,255,255,0.1);
    }
    .chart-bar.active .bar-fill {
        box-shadow: 0 0 15px rgba(14,240,255,0.4);
    }
    .bar-label {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 0.5rem;
    }
    .chart-bar.active .bar-label {
        color: var(--accent-teal);
        font-weight: 600;
    }
    .progress-stats {
        display: flex;
        justify-content: space-around;
        padding-top: 1rem;
        border-top: 1px solid var(--glass-border);
    }
    .progress-stat {
        text-align: center;
    }
    .ps-value {
        display: block;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--accent-teal);
    }
    .ps-label {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    /* === ACHIEVEMENTS === */
    .achievement-count {
        color: var(--text-muted);
        font-size: 0.9rem;
    }
    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }
    .achievement {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 1rem 0.5rem;
        border-radius: 14px;
        background: rgba(255,255,255,0.03);
        border: 1px solid var(--glass-border);
        transition: transform 0.2s, border-color 0.3s;
    }
    .achievement:hover {
        transform: translateY(-2px);
    }
    .achievement.unlocked {
        border-color: rgba(255,215,0,0.3);
    }
    .achievement.unlocked:hover {
        border-color: var(--accent-gold);
    }
    .achievement.locked {
        opacity: 0.5;
    }
    .achievement-icon {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .achievement.unlocked .achievement-icon {
        background: linear-gradient(135deg, var(--accent-gold), #ff8c00);
