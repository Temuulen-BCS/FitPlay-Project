@code {
    private ApiClient.UserProgress? _progress;
    private List<ApiClient.TrainingCompletion> _completions = new();
    private List<ApiClient.TrainingSummary> _trainings = new();
    private List<ApiClient.AchievementStatus> _achievementStatuses = new();
    private List<ApiClient.ClassSchedule> _schedules = new();
    private List<ScheduleItem> _todaySchedule = new();
    private List<WeeklyBar> _weeklyBars = new();
    private List<AchievementItem> _achievements = new();
    private List<RecommendedItem> _recommendedTrainings = new();
    private bool _isLoading = true;
    private int? _currentUserId;
    private string? _userName;

    private const double DefaultMetValue = 6.0;
    private const double DefaultWeightKg = 70.0;

    private string _welcomeTitle = "Champion";
    private string _welcomeSubtitle = "Ready to crush your goals today?";
    private string _levelLabel = "Lv. 1";
    private int _currentStreak;
    private string _totalXpDisplay = "0";
    private string _xpProgressPercent = "0";
    private string _xpToNextLevelLabel = "";
    private string _caloriesDisplay = "0";
    private string _caloriesPeriodLabel = "Total";
    private string _workoutsDisplay = "0";
    private string _workoutsLabel = "Completed";
    private string _hoursTrainedDisplay = "0";
    private string _hoursLabel = "Total time";
    private string _weekCaloriesDisplay = "0";
    private string _weekHoursDisplay = "0h";
    private int _weekWorkouts;
    private string _achievementCountLabel = "0/0";
    private string _scheduleHeader = "Today's Schedule";

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
    }

    private async Task LoadDashboard()
    {
        _isLoading = true;
        try
        {
            _currentUserId = await ResolveCurrentUserIdAsync();
            if (_currentUserId is null)
            {
                _welcomeSubtitle = "Please sign in to view your stats.";
                return;
            }

            var progressTask = Api.GetUserProgress(_currentUserId.Value);
            var completionsTask = Api.GetUserCompletions(_currentUserId.Value, 200);
            var trainingsTask = Api.GetTrainings(_currentUserId.Value);
            var achievementsTask = Api.GetAllAchievementsStatus(_currentUserId.Value);
            var todayStart = DateTime.UtcNow.Date;
            var todayEnd = todayStart.AddDays(1).AddTicks(-1);
            var schedulesTask = Api.GetUserSchedule(_currentUserId.Value, todayStart, todayEnd);

            await Task.WhenAll(progressTask, completionsTask, trainingsTask, achievementsTask, schedulesTask);

            _progress = await progressTask;
            _completions = await completionsTask;
            _trainings = await trainingsTask;
            _achievementStatuses = await achievementsTask;
            _schedules = await schedulesTask;

            if (_schedules.Count == 0)
            {
                var upcomingEnd = todayStart.AddDays(7).AddTicks(-1);
                _schedules = await Api.GetUserSchedule(_currentUserId.Value, todayStart, upcomingEnd);
                _scheduleHeader = _schedules.Count > 0 ? "Upcoming Schedule" : "Today's Schedule";
            }
            else
            {
                _scheduleHeader = "Today's Schedule";
            }

            BuildDashboardView();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task<int?> ResolveCurrentUserIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user?.Identity?.IsAuthenticated != true)
        {
            return null;
        }

        var identityId = user.FindFirstValue(ClaimTypes.NameIdentifier);
        if (string.IsNullOrWhiteSpace(identityId))
        {
            return null;
        }

        var domainUser = await Api.GetUserByIdentity(identityId);
        if (domainUser is null)
        {
            _welcomeSubtitle = "No domain profile found for this account.";
        }
        else
        {
            _userName = domainUser.Name;
        }
        return domainUser?.Id;
    }

    private void BuildDashboardView()
    {
        _currentStreak = _progress?.CurrentStreak ?? 0;
        _welcomeTitle = string.IsNullOrWhiteSpace(_userName) ? "Champion" : _userName;
        _welcomeSubtitle = _currentStreak > 0
            ? $"You're on a {_currentStreak}-day streak! Keep it going."
            : "Ready to crush your goals today?";
        _levelLabel = $"Lv. {_progress?.CurrentLevel ?? 1}";

        var totalXp = _progress?.TotalXp ?? 0;
        _totalXpDisplay = totalXp.ToString("N0");
        var xpPercent = Math.Clamp(_progress?.ProgressPercent ?? 0, 0, 100);
        _xpProgressPercent = xpPercent.ToString("0.#");

        if (_progress != null)
        {
            var xpToNext = Math.Max(0, _progress.XpForNextLevel - _progress.TotalXp);
            _xpToNextLevelLabel = xpToNext > 0
                ? $"{xpToNext:N0} XP to Level {_progress.CurrentLevel + 1}"
                : "Max level reached";
        }

        var approvedCompletions = GetApprovedCompletions(_completions);
        var weekStart = DateTime.UtcNow.Date.AddDays(-6);
        var weekCompletions = approvedCompletions
            .Where(c => c.CompletedAt.Date >= weekStart)
            .ToList();

        _weekWorkouts = weekCompletions.Count;

        var weekDurationMinutes = GetCompletedTrainingMinutes(weekCompletions);
        var weekHours = weekDurationMinutes / 60.0;
        _weekHoursDisplay = $"{weekHours:0.#}h";

        var weekCalories = EstimateCalories(weekHours);
        _weekCaloriesDisplay = weekCalories.ToString("N0");

        var totalDurationMinutes = GetCompletedTrainingMinutes(approvedCompletions);
        var totalHours = totalDurationMinutes / 60.0;
        _hoursTrainedDisplay = $"{totalHours:0.#}";

        var totalCalories = EstimateCalories(totalHours);
        _caloriesDisplay = totalCalories.ToString("N0");
        _caloriesPeriodLabel = "Total";

        _workoutsDisplay = (_progress?.TotalTrainingsCompleted ?? approvedCompletions.Count).ToString("N0");
        _workoutsLabel = "Completed";
        _hoursLabel = "Total time";

        BuildSchedule(approvedCompletions);
        BuildWeeklyBars(weekCompletions, weekStart);
        BuildAchievements();
        BuildRecommended();
    }

    private static List<ApiClient.TrainingCompletion> GetApprovedCompletions(List<ApiClient.TrainingCompletion> completions)
    {
        return completions
            .Where(c => string.Equals(c.Status, "AutoApproved", StringComparison.OrdinalIgnoreCase)
                        || string.Equals(c.Status, "Validated", StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    private int GetCompletedTrainingMinutes(IEnumerable<ApiClient.TrainingCompletion> completions)
    {
        var completionsByTraining = completions
            .Select(c => c.TrainingId)
            .ToHashSet();

        var trainingDurationMap = _trainings
            .Where(t => completionsByTraining.Contains(t.Id))
            .ToDictionary(t => t.Id, t => t.DurationMin);

        var totalMinutes = 0;
        foreach (var completion in completions)
        {
            if (trainingDurationMap.TryGetValue(completion.TrainingId, out var duration))
            {
                totalMinutes += duration;
            }
        }

        return totalMinutes;
    }

    private double EstimateCalories(double hours)
    {
        var calories = DefaultMetValue * DefaultWeightKg * hours;
        return Math.Max(0, Math.Round(calories));
    }

    private void BuildSchedule(List<ApiClient.TrainingCompletion> approvedCompletions)
    {
        if (_schedules.Any())
        {
            _todaySchedule = _schedules
                .OrderBy(s => s.ScheduledAt)
                .Select((s, index) => new ScheduleItem
                {
                    Title = s.Modality,
                    Subtitle = "Scheduled class",
                    TimeLabel = s.ScheduledAt.ToString("HH:mm"),
                    IsBooked = string.Equals(s.Status, "Completed", StringComparison.OrdinalIgnoreCase),
                    ItemClass = index == 0 ? "active" : string.Empty
                })
                .ToList();
            return;
        }

        var today = DateTime.UtcNow.Date;
        var todayCompletions = approvedCompletions
            .Where(c => c.CompletedAt.Date == today)
            .OrderByDescending(c => c.CompletedAt)
            .ToList();

        _todaySchedule = todayCompletions.Select((c, index) => new ScheduleItem
        {
            Title = c.TrainingName,
            Subtitle = $"Completed at {c.CompletedAt:HH:mm}",
            TimeLabel = c.CompletedAt.ToString("HH:mm"),
            IsBooked = true,
            ItemClass = index == 0 ? "active" : string.Empty
        }).ToList();
    }

    private void BuildWeeklyBars(List<ApiClient.TrainingCompletion> weekCompletions, DateTime weekStart)
    {
        var dailyCounts = new Dictionary<DateTime, int>();
        for (var i = 0; i < 7; i++)
        {
            dailyCounts[weekStart.AddDays(i)] = 0;
        }

        foreach (var completion in weekCompletions)
        {
            var date = completion.CompletedAt.Date;
            if (dailyCounts.ContainsKey(date))
            {
                dailyCounts[date] += 1;
            }
        }

        var maxCount = Math.Max(1, dailyCounts.Values.Max());
        var today = DateTime.UtcNow.Date;

        _weeklyBars = dailyCounts.OrderBy(kvp => kvp.Key).Select(kvp =>
        {
            var count = kvp.Value;
            var rawHeight = Math.Round(count / (double)maxCount * 100, 0);
            var height = count > 0 ? Math.Max(12, rawHeight) : 10;
            var isToday = kvp.Key == today;
            return new WeeklyBar
            {
                Label = kvp.Key.ToString("ddd"),
                HeightPercent = height,
                BarClass = isToday ? "active" : string.Empty,
                FillClass = count == 0 ? "empty" : string.Empty
            };
        }).ToList();
    }

    private void BuildAchievements()
    {
        _achievements = _achievementStatuses.Select(a => new AchievementItem
        {
            Name = a.Name,
            Earned = a.Earned,
            Icon = GetAchievementIcon(a.Name)
        }).ToList();

        var earnedCount = _achievements.Count(a => a.Earned);
        _achievementCountLabel = _achievements.Count == 0
            ? "0/0"
            : $"{earnedCount}/{_achievements.Count}";
    }

    private void BuildRecommended()
    {
        _recommendedTrainings = _trainings
            .Where(t => !t.IsCompleted)
            .OrderBy(t => t.Difficulty)
            .Take(3)
            .Select(t => new RecommendedItem
            {
                Name = t.Name,
                Detail = $"{t.TrainerName} | {t.DurationMin} min",
                XpReward = t.XpReward,
                Icon = GetTrainingIcon(t.Name)
            })
            .ToList();
    }

    private static string GetAchievementIcon(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "ACH";
        var tokens = name.Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        if (tokens.Length == 1)
        {
            return tokens[0].Length >= 2 ? tokens[0][..2].ToUpperInvariant() : tokens[0].ToUpperInvariant();
        }
        return string.Concat(tokens.Take(2).Select(t => char.ToUpperInvariant(t[0])));
    }

    private static string GetTrainingIcon(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "TR";
        var tokens = name.Split(' ', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        if (tokens.Length == 1)
        {
            return tokens[0].Length >= 3 ? tokens[0][..3].ToUpperInvariant() : tokens[0].ToUpperInvariant();
        }
        return string.Concat(tokens.Take(3).Select(t => char.ToUpperInvariant(t[0])));
    }

