@page "/dashboard"
@page "/user/dashboard"
@rendermode InteractiveServer
@attribute [Authorize]
@layout UserLayout

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using FitPlay.Blazor.Services
@using FitPlay_Blazor.Components.Layout
@inject ApiClient Api
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Dashboard - FitPlay</PageTitle>

<!-- DASHBOARD CONTENT -->
<main class="dashboard-main">
    <div class="dashboard-bg">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>

    <div class="dashboard-container">
        <!-- WELCOME HEADER -->
        <section class="welcome-section">
            <div class="welcome-content">
                <h1>Welcome back, <span class="highlight">@_welcomeTitle</span></h1>
                <p class="welcome-sub">@_welcomeSubtitle</p>
            </div>
            <div class="streak-badge">
                <span class="streak-flame">@_currentStreak</span>
                <span class="streak-label">Day Streak</span>
            </div>
        </section>

        <!-- STATS CARDS -->
        <section class="stats-section">
            <div class="stat-card glow-magenta">
                <div class="stat-icon">XP</div>
                <div class="stat-info">
                    <span class="stat-value">@_totalXpDisplay</span>
                    <span class="stat-label">Total XP</span>
                </div>
                <div class="stat-progress">
                    <div class="progress-bar" style="width: @_xpProgressPercent%;"></div>
                </div>
                <span class="stat-next">@_xpToNextLevelLabel</span>
            </div>

            <div class="stat-card glow-teal">
                <div class="stat-icon">CAL</div>
                <div class="stat-info">
                    <span class="stat-value">@_caloriesDisplay</span>
                    <span class="stat-label">Calories Burned</span>
                </div>
                <span class="stat-detail">@_caloriesPeriodLabel</span>
            </div>

            <div class="stat-card glow-gold">
                <div class="stat-icon">WO</div>
                <div class="stat-info">
                    <span class="stat-value">@_workoutsDisplay</span>
                    <span class="stat-label">Workouts</span>
                </div>
                <span class="stat-detail">@_workoutsLabel</span>
            </div>

            <div class="stat-card glow-magenta">
                <div class="stat-icon">HR</div>
                <div class="stat-info">
                    <span class="stat-value">@_hoursTrainedDisplay</span>
                    <span class="stat-label">Hours Trained</span>
                </div>
                <span class="stat-detail">@_hoursLabel</span>
            </div>
        </section>

        <!-- WEEKLY PROGRESS -->
        <section class="card progress-card">
            <div class="card-header">
                <h2>Weekly Progress</h2>
            </div>
            <div class="progress-chart">
                <div class="chart-bars">
                    @foreach (var bar in _weeklyBars)
                    {
                        <div class="chart-bar @bar.BarClass">
                            <div class="bar-fill @bar.FillClass" style="height: @bar.HeightPercent%;"></div>
                            <span class="bar-label">@bar.Label</span>
                        </div>
                    }
                </div>
            </div>
            <div class="progress-stats">
                <div class="progress-stat">
                    <span class="ps-value">@_weekWorkouts</span>
                    <span class="ps-label">Workouts</span>
                </div>
                <div class="progress-stat">
                    <span class="ps-value">@_weekCaloriesDisplay</span>
                    <span class="ps-label">Calories</span>
                </div>
                <div class="progress-stat">
                    <span class="ps-value">@_weekHoursDisplay</span>
                    <span class="ps-label">Time</span>
                </div>
            </div>
        </section>

        <!-- MAIN GRID -->
        <div class="dashboard-grid">
            <!-- LEFT COLUMN -->
            <div class="grid-left">
                <!-- TODAY'S SCHEDULE -->
                <section class="card schedule-card">
                    <div class="card-header">
                        <h2>@_scheduleHeader</h2>
                        <a href="/user/trainings" class="link-btn">View All</a>
                    </div>
                    <div class="schedule-list">
                        @if (_todaySchedule.Any())
                        {
                            @foreach (var item in _todaySchedule)
                            {
                                <div class="schedule-item @item.ItemClass">
                                    <div class="schedule-time">@item.TimeLabel</div>
                                    <div class="schedule-info">
                                        <h3>@item.Title</h3>
                                        <p>@item.Subtitle</p>
                                    </div>
                                    @if (item.IsBooked)
                                    {
                                        <span class="schedule-status booked">Completed</span>
                                    }
                                    else
                                    {
                                        <button class="btn-book" disabled>View</button>
                                    }
                                </div>
                            }
                        }
                        else if (!_isLoading)
                        {
                            <div class="schedule-empty">
                                <p>No trainings scheduled in the next 7 days.</p>
                            </div>
                        }
                    </div>
                </section>
            </div>

            <!-- RIGHT COLUMN -->
            <div class="grid-right">
                <!-- ACHIEVEMENTS -->
                <section class="card achievements-card">
                    <div class="card-header">
                        <h2>Achievements</h2>
                        <span class="achievement-count">@_achievementCountLabel</span>
                    </div>
                    <div class="achievements-grid">
                        @if (_achievements.Any())
                        {
                            @foreach (var achievement in _achievements)
                            {
                                <div class="achievement @(achievement.Earned ? "unlocked" : "locked")">
                                    <div class="achievement-icon">@achievement.Icon</div>
                                    <span class="achievement-name">@achievement.Name</span>
                                </div>
                            }
                        }
                        else if (!_isLoading)
                        {
                            <div class="achievement-empty">
                                <p>No achievements yet.</p>
                            </div>
                        }
                    </div>
                </section>

                <!-- RECOMMENDED -->
                <section class="card recommended-card">
                    <div class="card-header">
                        <h2>Recommended For You</h2>
                    </div>
                    <div class="recommended-list">
                        @if (_recommendedTrainings.Any())
                        {
                            @foreach (var training in _recommendedTrainings)
                            {
                                <div class="recommended-item">
                                    <div class="rec-icon">@training.Icon</div>
                                    <div class="rec-info">
                                        <h3>@training.Name</h3>
                                        <p>@training.Detail</p>
                                    </div>
                                    <span class="rec-xp">+@training.XpReward XP</span>
                                </div>
                            }
                        }
                        else if (!_isLoading)
                        {
                            <div class="recommended-empty">
                                <p>No recommendations right now.</p>
                            </div>
                        }
                    </div>
                </section>

                <!-- QUICK ACTIONS -->
                <section class="card actions-card">
                    <h2>Quick Actions</h2>
                    <div class="actions-grid">
                        <a href="/user/book-class" class="action-btn">
                            <span class="action-icon">+</span>
                            <span>Book Class</span>
                        </a>
                        <a href="/user/log-workout" class="action-btn">
                            <span class="action-icon">LOG</span>
                            <span>Log Workout</span>
                        </a>
                        <a href="#" class="action-btn">
                            <span class="action-icon">GYM</span>
                            <span>Check In</span>
                        </a>
                        <a href="#" class="action-btn">
                            <span class="action-icon">INV</span>
                            <span>Invite Friend</span>
                        </a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</main>

<!-- FOOTER -->
<footer class="site-footer">
    <p>&copy; 2026 FitPlay. Where Fitness Meets Nightlife. All rights reserved.</p>
</footer>

