@page "/trainer/validations"
@rendermode InteractiveServer
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ApiClient Api
@layout TrainerLayout

<PageTitle>Pending Validations - FitPlay</PageTitle>

<div class="validations-page">
    <div class="page-header">
        <h1>Pending Validations</h1>
        <p class="subtitle">Review and validate training completions from your users</p>
    </div>

    @if (_isLoading)
    {
        <div class="loading">Loading pending validations...</div>
    }
    else if (_pendingCompletions.Any())
    {
        <div class="validations-list">
            @foreach (var completion in _pendingCompletions)
            {
                <div class="validation-card">
                    <div class="card-header">
                        <div class="user-info">
                            <span class="user-avatar">U</span>
                            <span class="user-name">User #@completion.UserId</span>
                        </div>
                        <span class="completion-date">@completion.CompletedAt.ToString("MMM d, h:mm tt")</span>
                    </div>

                    <div class="card-content">
                        <h4>@completion.TrainingName</h4>
                        <div class="xp-info">
                            <span class="label">XP to award:</span>
                            <input type="number" @bind="_xpAdjustments[completion.Id]" min="0" max="10000" class="xp-input" />
                        </div>
                        @if (!string.IsNullOrEmpty(completion.Notes))
                        {
                            <p class="completion-notes">User notes: @completion.Notes</p>
                        }
                        <div class="trainer-notes">
                            <label>Your notes (optional):</label>
                            <textarea @bind="_trainerNotes[completion.Id]" placeholder="Add feedback..."></textarea>
                        </div>
                    </div>

                    <div class="card-actions">
                        <button class="btn-reject" @onclick="() => ValidateCompletion(completion.Id, false)" disabled="@_processing">
                            Reject
                        </button>
                        <button class="btn-approve" @onclick="() => ValidateCompletion(completion.Id, true)" disabled="@_processing">
                            Approve (+@(_xpAdjustments.GetValueOrDefault(completion.Id, completion.XpGranted)) XP)
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-validations">
            <p>No pending validations</p>
            <span>All training completions have been reviewed</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(_message))
    {
        <div class="message @(_isError ? "error" : "success")">@_message</div>
    }
</div>

<style>
    .validations-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 24px;
    }

    .page-header {
        margin-bottom: 32px;
    }

    .page-header h1 {
        margin: 0 0 8px 0;
        font-size: 28px;
        color: var(--text-primary);
    }

    .subtitle {
        margin: 0;
        color: var(--text-muted);
    }

    .validations-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .validation-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.18);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        background: rgba(255,255,255,0.03);
        border-bottom: 1px solid var(--glass-border);
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .user-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent-magenta) 0%, var(--accent-teal) 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .user-name {
        font-weight: 500;
        color: var(--text-primary);
    }

    .completion-date {
        font-size: 13px;
        color: var(--text-muted);
    }

    .card-content {
        padding: 20px;
    }

    .card-content h4 {
        margin: 0 0 16px 0;
        font-size: 18px;
        color: var(--text-primary);
    }

    .xp-info {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .xp-info .label {
        font-size: 14px;
        color: var(--text-muted);
    }

    .xp-input {
        width: 100px;
        padding: 8px 12px;
        border: 1px solid var(--glass-border);
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        color: var(--accent-teal);
        background: rgba(255,255,255,0.03);
    }

    .completion-notes {
        margin: 0 0 16px 0;
        padding: 12px;
        background: rgba(255,255,255,0.04);
        border-radius: 8px;
        font-size: 14px;
        color: var(--text-muted);
        font-style: italic;
    }

    .trainer-notes label {
        display: block;
        font-size: 14px;
        color: var(--text-muted);
        margin-bottom: 8px;
    }

    .trainer-notes textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid var(--glass-border);
        border-radius: 8px;
        font-size: 14px;
        resize: vertical;
        min-height: 60px;
        background: rgba(255,255,255,0.03);
        color: var(--text-primary);
    }

    .card-actions {
        display: flex;
        gap: 12px;
        padding: 16px 20px;
        background: rgba(255,255,255,0.03);
        border-top: 1px solid var(--glass-border);
    }

    .btn-reject, .btn-approve {
        flex: 1;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: opacity 0.2s;
    }

    .btn-reject {
        background: rgba(255,77,109,0.2);
        color: #ff9aa2;
        border: 1px solid rgba(255,77,109,0.4);
    }

    .btn-approve {
        background: linear-gradient(135deg, var(--accent-teal) 0%, var(--accent-magenta) 100%);
        color: white;
    }

    .btn-reject:hover:not(:disabled), .btn-approve:hover:not(:disabled) {
        opacity: 0.9;
    }

    .btn-reject:disabled, .btn-approve:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .loading, .no-validations {
        text-align: center;
        padding: 60px;
        color: var(--text-muted);
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
    }

    .no-validations span {
        display: block;
        margin-top: 8px;
        font-size: 14px;
    }

    .message {
        margin-top: 20px;
        padding: 16px;
        border-radius: 8px;
        text-align: center;
    }

    .message.success {
        background: rgba(14,240,255,0.12);
        color: var(--accent-teal);
    }

    .message.error {
        background: rgba(255,77,109,0.2);
        color: #ff9aa2;
    }
</style>

@code {
    private List<ApiClient.TrainingCompletion> _pendingCompletions = new();
    private Dictionary<int, int> _xpAdjustments = new();
    private Dictionary<int, string> _trainerNotes = new();
    private bool _isLoading = true;
    private bool _processing;
    private string? _message;
    private bool _isError;

    private int? _currentTrainerId;

    protected override async Task OnInitializedAsync()
    {
        _currentTrainerId = await ResolveCurrentTrainerIdAsync();
        await LoadPendingValidations();
    }

    private async Task LoadPendingValidations()
    {
        _isLoading = true;
        try
        {
            if (_currentTrainerId is null)
            {
                _message = "Trainer profile not found. Please sign in with a trainer account.";
                _isError = true;
                _pendingCompletions = new();
                return;
            }

            _pendingCompletions = await Api.GetPendingValidations(_currentTrainerId.Value);
            
            // Initialize adjustment values
            foreach (var completion in _pendingCompletions)
            {
                _xpAdjustments[completion.Id] = completion.XpGranted;
                _trainerNotes[completion.Id] = "";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading validations: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ValidateCompletion(int completionId, bool approved)
    {
        if (_currentTrainerId is null)
        {
            _message = "Trainer profile not found. Please sign in with a trainer account.";
            _isError = true;
            return;
        }
        _processing = true;
        _message = null;
        
        try
        {
            var xpAdjustment = approved ? _xpAdjustments.GetValueOrDefault(completionId) : (int?)null;
            var notes = _trainerNotes.GetValueOrDefault(completionId);

            await Api.ValidateCompletion(completionId, approved, _currentTrainerId.Value, xpAdjustment, notes);
            
            _message = approved ? "Training completion approved!" : "Training completion rejected.";
            _isError = false;

            // Refresh the list
            await LoadPendingValidations();
        }
        catch (Exception ex)
        {
            _message = $"Error: {ex.Message}";
            _isError = true;
        }
        finally
        {
            _processing = false;
        }
    }

    private async Task<int?> ResolveCurrentTrainerIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user?.Identity?.IsAuthenticated != true)
        {
            return null;
        }

        var identityId = user.FindFirstValue(ClaimTypes.NameIdentifier);
        if (string.IsNullOrWhiteSpace(identityId))
        {
            return null;
        }

        var trainer = await Api.GetTrainerByIdentity(identityId);
        return trainer?.Id;
    }
}
