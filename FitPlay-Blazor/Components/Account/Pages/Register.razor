@page "/Account/Register"
@attribute [AllowAnonymous]
@layout EmptyLayout

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using FitPlay_Blazor.Data
@using Microsoft.AspNetCore.Authorization
@using FitPlay_Blazor.Components.Layout

@inject UserManager<ApplicationUser> UserManager
@inject IUserStore<ApplicationUser> UserStore
@inject SignInManager<ApplicationUser> SignInManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Register - FitPlay</PageTitle>

<!-- TOP NAV BAR -->
<header class="top-nav">
    <div class="nav-inner">
        <a href="/" class="logo">FIT<span>PLAY</span></a>
        <nav class="nav-links-top">
            <a href="/">Home</a>
            <a href="/#classes">Classes</a>
            <a href="/#trainers">Trainers</a>
        </nav>
        <a href="Account/Login" class="btn-secondary-nav" data-enhanced-nav="false">Login</a>
    </div>
</header>

<!-- REGISTER HERO -->
<section class="auth-hero">
    <div class="auth-bg">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>
    
    <div class="auth-container">
        <!-- LEFT: Welcome content -->
        <div class="auth-welcome">
            <h1>Join the <span class="highlight">Movement</span></h1>
            <p class="auth-subtitle">Create your account and start your fitness journey with us.</p>
            
            <div class="perks-list">
                <div class="perk">
                    <span class="perk-icon">XP</span>
                    <span>Earn XP & level up with every workout</span>
                </div>
                <div class="perk">
                    <span class="perk-icon">24/7</span>
                    <span>Access to all classes, anytime</span>
                </div>
                <div class="perk">
                    <span class="perk-icon">DJ</span>
                    <span>Train with live DJ sessions</span>
                </div>
            </div>
            
            <p class="auth-login-prompt">
                Already have an account? <a href="Account/Login" data-enhanced-nav="false">Login here</a>
            </p>
        </div>
        
        <!-- RIGHT: Registration form -->
        <div class="auth-card">
            <h2>Create Account</h2>
            <p class="card-subtitle">Fill in your details to get started</p>
            
            <StatusMessage Message="@Message" />
            
            <EditForm Model="Input" asp-route-returnUrl="@ReturnUrl" method="post" OnValidSubmit="RegisterUser" FormName="register">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-errors" role="alert" />
                
                <div class="form-group">
                    <label for="email">Email</label>
                    <InputText @bind-Value="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <ValidationMessage For="() => Input.Email" class="field-error" />
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <InputText type="password" @bind-Value="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Create a password" />
                    <ValidationMessage For="() => Input.Password" class="field-error" />
                </div>
                
                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    <InputText type="password" @bind-Value="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                    <ValidationMessage For="() => Input.ConfirmPassword" class="field-error" />
                </div>
                
                <button type="submit" class="btn-primary btn-full">Create Account</button>
            </EditForm>
            
            <div class="divider">
                <span>or continue with</span>
            </div>
            
            <div class="external-logins">
                <ExternalLoginPicker />
            </div>
        </div>
    </div>
</section>

