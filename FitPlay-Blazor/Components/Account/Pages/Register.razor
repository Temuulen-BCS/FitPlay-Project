</header>

<!-- REGISTER HERO -->
<section class="auth-hero">
    <div class="auth-bg">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
    </div>

    <div class="auth-container">
        <!-- LEFT: Welcome content -->
        <div class="auth-welcome">
            <h1>Join the <span class="highlight">Movement</span></h1>
            <p class="auth-subtitle">Create your account and start your fitness journey with us.</p>

            <div class="perks-list">
                <div class="perk">
                    <span class="perk-icon">XP</span>
                    <span>Earn XP &amp; level up with every workout</span>
                </div>
                <div class="perk">
                    <span class="perk-icon">24/7</span>
                    <span>Access to all classes, anytime</span>
                </div>
                <div class="perk">
                    <span class="perk-icon">DJ</span>
                    <span>Train with live DJ sessions</span>
                </div>
            </div>

            <p class="auth-login-prompt">
                Already have an account? <a href="Account/Login" data-enhanced-nav="false">Login here</a>
            </p>
        </div>

        <!-- RIGHT: Registration form -->
        <div class="auth-card">
            <h2>Create Account</h2>
            <p class="card-subtitle">Choose your role to get started</p>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="validation-errors" role="alert">@errorMessage</div>
            }

            <EditForm Model="Input" method="post" OnValidSubmit="RegisterUser" FormName="register">

                <!-- Account type tabs (radio inputs styled as tabs) -->
                <InputRadioGroup @bind-Value="Input.AccountType">
                <div class="account-type-tabs">
                    <label class="tab-btn">
                        <InputRadio Value='"User"' />
                        I am a User
                    </label>
                    <label class="tab-btn">
                        <InputRadio Value='"Trainer"' />
                        I am a Trainer
                    </label>
                </div>
                </InputRadioGroup>
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-errors" role="alert" />

                <div class="form-group">
                    <label>Full Name</label>
                    <InputText @bind-Value="Input.Name" class="form-input" autocomplete="name" aria-required="true" placeholder="Your full name" />
                    <ValidationMessage For="() => Input.Name" class="field-error" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <InputText @bind-Value="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <ValidationMessage For="() => Input.Email" class="field-error" />
                </div>

                <div class="form-group">
                    <label>Phone</label>
                    <InputText @bind-Value="Input.Phone" class="form-input" autocomplete="tel" aria-required="true" placeholder="+1 234 567 8900" />
                    <ValidationMessage For="() => Input.Phone" class="field-error" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <InputText type="password" @bind-Value="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Create a password" />
                    <ValidationMessage For="() => Input.Password" class="field-error" />
                </div>

                <div class="form-group">
                    <label>Confirm Password</label>
                    <InputText type="password" @bind-Value="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                    <ValidationMessage For="() => Input.ConfirmPassword" class="field-error" />
                </div>

                <button type="submit" class="btn-primary btn-full">
                    Create @Input.AccountType Account
                </button>
            </EditForm>

            <div class="divider">
                <span>or continue with</span>
            </div>

            <div class="external-logins">
                <ExternalLoginPicker />
            </div>
        </div>
    </div>
</section>

