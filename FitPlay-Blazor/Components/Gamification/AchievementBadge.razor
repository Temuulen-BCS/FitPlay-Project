@using FitPlay.Blazor.Services

<div class="achievement-badge @(IsEarned ? "earned" : "locked")">
    <div class="badge-icon">
        @if (IsEarned)
        {
            <span class="icon">@GetIcon()</span>
        }
        else
        {
            <span class="icon locked-icon">?</span>
        }
    </div>
    <div class="badge-info">
        <span class="badge-name">@Name</span>
        <span class="badge-description">@Description</span>
        @if (IsEarned && EarnedAt.HasValue)
        {
            <span class="earned-date">Earned @EarnedAt.Value.ToString("MMM d, yyyy")</span>
        }
    </div>
</div>

<style>
    .achievement-badge {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .achievement-badge.earned {
        background: linear-gradient(135deg, rgba(255,47,180,0.14) 0%, rgba(14,240,255,0.12) 100%);
        border: 1px solid rgba(255,47,180,0.45);
    }

    .achievement-badge.locked {
        background: rgba(255,255,255,0.04);
        border: 1px solid var(--glass-border);
        opacity: 0.7;
    }

    .achievement-badge.earned:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 47, 180, 0.3);
    }

    .badge-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .earned .badge-icon {
        background: linear-gradient(135deg, var(--accent-magenta) 0%, var(--accent-teal) 100%);
    }

    .locked .badge-icon {
        background: rgba(255,255,255,0.2);
    }

    .icon {
        color: white;
    }

    .locked-icon {
        opacity: 0.5;
    }

    .badge-info {
        flex: 1;
    }

    .badge-name {
        display: block;
        font-weight: bold;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .locked .badge-name {
        color: var(--text-muted);
    }

    .badge-description {
        display: block;
        font-size: 13px;
        color: var(--text-muted);
    }

    .earned-date {
        display: block;
        font-size: 11px;
        color: var(--accent-teal);
        margin-top: 4px;
    }
</style>

@code {
    [Parameter] public string AchievementType { get; set; } = "";
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public bool IsEarned { get; set; }
    [Parameter] public DateTime? EarnedAt { get; set; }

    private string GetIcon()
    {
        return AchievementType switch
        {
            "first_training" => "1",
            "7_day_streak" => "7",
            "30_day_streak" => "30",
            "10_trainings" => "10",
            "50_trainings" => "50",
            "100_trainings" => "C",
            "level_up" => "^",
            "level_5" => "5",
            "level_10" => "M",
            _ => "*"
        };
    }
}
