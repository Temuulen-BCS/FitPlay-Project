@using FitPlay.Blazor.Services

<div class="level-progress-bar">
    <div class="level-info">
        <span class="level-badge">Level @Level</span>
        <span class="level-label">@LevelLabel</span>
    </div>
    <div class="progress-container">
        <div class="progress-bar" style="width: @(ProgressPercent)%"></div>
    </div>
    <div class="xp-info">
        <span>@CurrentXp XP</span>
        <span>@NextLevelXp XP</span>
    </div>
</div>

<style>
    .level-progress-bar {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 12px;
        padding: 16px;
        color: white;
    }

    .level-info {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
    }

    .level-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 14px;
    }

    .level-label {
        color: #a0aec0;
        font-size: 14px;
    }

    .progress-container {
        background: #2d3748;
        border-radius: 10px;
        height: 12px;
        overflow: hidden;
    }

    .progress-bar {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        height: 100%;
        border-radius: 10px;
        transition: width 0.5s ease-in-out;
    }

    .xp-info {
        display: flex;
        justify-content: space-between;
        margin-top: 8px;
        font-size: 12px;
        color: #a0aec0;
    }
</style>

@code {
    [Parameter] public int Level { get; set; }
    [Parameter] public string LevelLabel { get; set; } = "";
    [Parameter] public int CurrentXp { get; set; }
    [Parameter] public int NextLevelXp { get; set; }
    [Parameter] public double ProgressPercent { get; set; }
}
