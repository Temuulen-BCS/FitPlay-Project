@using FitPlay.Blazor.Services

<div class="training-card @(IsCompleted ? "completed" : "")">
    <div class="card-header">
        <div class="difficulty">
            @for (int i = 0; i < Difficulty; i++)
            {
                <span class="difficulty-dot filled"></span>
            }
            @for (int i = Difficulty; i < 5; i++)
            {
                <span class="difficulty-dot"></span>
            }
        </div>
        <span class="xp-reward">+@XpReward XP</span>
    </div>

    <h4 class="training-name">@Name</h4>
    <p class="training-description">@Description</p>

    <div class="training-meta">
        <span class="meta-item">@DurationMin min</span>
        <span class="meta-item">@ExerciseCount exercises</span>
        <span class="meta-item">by @TrainerName</span>
    </div>

    @if (IsCompleted)
    {
        <div class="completed-badge">Completed</div>
    }

    <div class="card-actions">
        <button class="btn-view" @onclick="OnViewClick">View Details</button>
        @if (!IsCompleted)
        {
            <button class="btn-start" @onclick="OnStartClick">Start Training</button>
        }
    </div>
</div>

<style>
    .training-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.18);
        transition: transform 0.2s, box-shadow 0.2s;
        position: relative;
    }

    .training-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.24);
    }

    .training-card.completed {
        border-color: var(--accent-teal);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .difficulty {
        display: flex;
        gap: 4px;
    }

    .difficulty-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(255,255,255,0.14);
    }

    .difficulty-dot.filled {
        background: linear-gradient(135deg, var(--accent-magenta) 0%, var(--accent-teal) 100%);
    }

    .xp-reward {
        background: linear-gradient(135deg, var(--accent-magenta) 0%, var(--accent-teal) 100%);
        color: white;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: bold;
    }

    .training-name {
        margin: 0 0 8px 0;
        font-size: 18px;
        color: var(--text-primary);
    }

    .training-description {
        margin: 0 0 12px 0;
        font-size: 14px;
        color: var(--text-muted);
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .training-meta {
        display: flex;
        gap: 12px;
        margin-bottom: 16px;
    }

    .meta-item {
        font-size: 12px;
        color: var(--text-muted);
    }

    .completed-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(14,240,255,0.2);
        border: 1px solid rgba(14,240,255,0.4);
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: bold;
    }

    .card-actions {
        display: flex;
        gap: 12px;
    }

    .btn-view, .btn-start {
        flex: 1;
        padding: 10px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
        border: none;
    }

    .btn-view {
        background: rgba(255,255,255,0.06);
        color: var(--text-primary);
        border: 1px solid var(--glass-border);
    }

    .btn-view:hover {
        background: rgba(255,255,255,0.1);
    }

    .btn-start {
        background: linear-gradient(135deg, var(--accent-magenta) 0%, var(--accent-teal) 100%);
        color: white;
    }

    .btn-start:hover {
        opacity: 0.9;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public int DurationMin { get; set; }
    [Parameter] public int XpReward { get; set; }
    [Parameter] public int Difficulty { get; set; }
    [Parameter] public string TrainerName { get; set; } = "";
    [Parameter] public int ExerciseCount { get; set; }
    [Parameter] public bool IsCompleted { get; set; }
    [Parameter] public EventCallback<int> OnView { get; set; }
    [Parameter] public EventCallback<int> OnStart { get; set; }

    private async Task OnViewClick() => await OnView.InvokeAsync(Id);
    private async Task OnStartClick() => await OnStart.InvokeAsync(Id);
}
