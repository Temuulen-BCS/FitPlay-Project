@using FitPlay.Blazor.Services

<div class="progress-card">
    <div class="card-header">
        <h3>Your Progress</h3>
        @if (Progress?.CurrentStreak > 0)
        {
            <span class="streak-badge">@Progress.CurrentStreak day streak</span>
        }
    </div>

    @if (Progress != null)
    {
        <LevelProgressBar 
            Level="@Progress.CurrentLevel"
            LevelLabel="@Progress.LevelLabel"
            CurrentXp="@Progress.TotalXp"
            NextLevelXp="@Progress.XpForNextLevel"
            ProgressPercent="@Progress.ProgressPercent" />

        <div class="stats-grid">
            <div class="stat-item">
                <span class="stat-value">@Progress.TotalXp</span>
                <span class="stat-label">Total XP</span>
            </div>
            <div class="stat-item">
                <span class="stat-value">@Progress.TotalTrainingsCompleted</span>
                <span class="stat-label">Trainings</span>
            </div>
            <div class="stat-item">
                <span class="stat-value">@Progress.CurrentStreak</span>
                <span class="stat-label">Streak</span>
            </div>
        </div>
    }
    else if (IsLoading)
    {
        <div class="loading">Loading progress...</div>
    }
    else
    {
        <div class="no-data">No progress data available</div>
    }
</div>

<style>
    .progress-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.18);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .card-header h3 {
        margin: 0;
        color: var(--text-primary);
        font-size: 18px;
    }

    .streak-badge {
        background: linear-gradient(135deg, rgba(255,215,0,0.35) 0%, rgba(255,47,180,0.35) 100%);
        border: 1px solid rgba(255,215,0,0.4);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: bold;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
        margin-top: 20px;
    }

    .stat-item {
        text-align: center;
        padding: 12px;
        background: rgba(255,255,255,0.04);
        border: 1px solid var(--glass-border);
        border-radius: 8px;
    }

    .stat-value {
        display: block;
        font-size: 24px;
        font-weight: bold;
        color: var(--accent-teal);
    }

    .stat-label {
        display: block;
        font-size: 12px;
        color: var(--text-muted);
        margin-top: 4px;
    }

    .loading, .no-data {
        text-align: center;
        padding: 40px;
        color: var(--text-muted);
    }
</style>

@code {
    [Parameter] public ApiClient.UserProgress? Progress { get; set; }
    [Parameter] public bool IsLoading { get; set; }
}
