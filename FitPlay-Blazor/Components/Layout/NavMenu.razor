@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FitPlay</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView Roles="User">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user/trainings">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Trainings
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user/progress">
                    <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> My Progress
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user/achievements">
                    <span class="bi bi-trophy-nav-menu" aria-hidden="true"></span> Achievements
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Trainer">
            <div class="nav-section-header px-3">
                <span>Trainer</span>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="trainer/dashboard">
                    <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="trainer/validations">
                    <span class="bi bi-check-circle-nav-menu" aria-hidden="true"></span> Validations
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="trainer/exercises">
                    <span class="bi bi-activity-nav-menu" aria-hidden="true"></span> Exercises
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="trainer/users/1">
                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Manage Users
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <a class="nav-link" href="Account/Register" data-enhanced-nav="false">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </a>
                </div>
                <div class="nav-item px-3">
                    <a class="nav-link" href="Account/Login" data-enhanced-nav="false">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

<style>
    .nav-section-header {
        margin-top: 16px;
        padding-top: 12px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-section-header span {
        font-size: 11px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.5);
        letter-spacing: 0.5px;
    }
</style>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

